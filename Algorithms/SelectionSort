#include <iostream>
using namespace std;


void selectionSort(int arr[], int n){
    
    
    for(int i= 0; i < n-1; i++){
        int min_index = i;
    
        for(int j = i + 1; j < n; j++){
            
            if(arr[j] < arr[min_index]){
                min_index = j;
            }
        }
        
        int temp = arr[min_index];
        arr[min_index] = arr[i];
        arr[i] = temp;
    }
    
}

void printArray(int arr[], int n){
    
    cout<<"Sorted array: ";
    for(int i=0; i < n; i++){
        cout<< arr[i]<< " ";
    }
    cout<< endl;
    
}

int main(void){
    
    int arr[] = {4,2,7,3,8,5,1,10,6,9};
    int n = sizeof(arr)/sizeof(arr[0]);
    
    cout<<"Unsorted array: ";
    for(int i=0; i < n; i++){
        cout<< arr[i]<< " ";
    }
    cout<<endl; 
    selectionSort(arr, n);
    printArray(arr, n);
}
